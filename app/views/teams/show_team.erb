<h1><%= @team.name %></h1>
<% @team.players.each do |player| %>
   <%= player.position %>
   <a href="http://www.espn.com/nfl/player/_/id/<%=player.espnid%>"><%= "#{player.first_name} #{player.last_name}" %></a>
<% end %>
<br><br>
<a href="/teams/<%= @team.id %>/edit">Edit Team</a>
&nbsp
<a href="/players/new">Add Player</a>
<br><br>
<form action="/teams/<%=@team.id%>/delete" method="POST">
    <input type="hidden" name="_method" value="delete">
    <input id="delete" type="submit" value="Delete Team">
</form>